#!/usr/bin/env node

'use strict';


// =====================================================
// CONFIGURATION
// =====================================================

var tictac = require('commander'),
    prompt = require('prompt'),
    config = require('../lib'),
    pkgver = require('../package').version,
    task   = config.defineTask,
    logger = config.defineLog,
    hist   = config.showHistory,
    args   = process.argv;

// =====================================================
// MAIN FUNCTION
// =====================================================

var runTask = function (err, result) {
    task(result.task, result.time);
    logger(result.task, result.time);
};


// =====================================================
// CLI
// =====================================================

// Options
tictac
    .version('Tic Tac v' + pkgver, '-v, --version')
    .option('-H, --history', 'shows tasks')
    .parse(process.argv);

if (tictac.history) {
    hist();
}

if (args.length === 1) {
    // Help
    tictac.help();
} else if (args.length === 2) {
    // Start Prompt
    prompt.start();
    prompt.get(['task', 'time'], runTask);
}
